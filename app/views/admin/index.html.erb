<% if current_user.role == 'admin' %>



    <div class="ui center aligned grid" style="padding: 25px;">
      <h3>Admin working environment</h3>
    </div>

    <div class="ui segment center aligned grid">
        <p class="ui error"><%= flash[:error] %></p>
    </div>

    <div class="ui segment center aligned grid">
      <h4>All Users</h4>
    </div>

    <div class="ui segment center aligned grid">
        <table class="ui compact celled definition table">
          <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Registration Date</th>
            <th>E-mail address</th>
            <th>Premium Plan</th>
            <th></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
          <tr>
            <td class="collapsing">
              <div class="ui fitted slider checkbox">
                <input type="checkbox"> <label></label>
              </div>
            </td>
            <td> <%= user.username %> </td>
            <td> <%= user.email %> </td>
            <td> <%= user.role %> </td>
            <td>No</td>
            <td>Edit</td>
            <td>
              <a class="btn btn-sm" href="delete/user/<%=user.id%>" data-method="delete">
                <i class="pg-trash"></i><span class="bold">Delete</span>
              </a>
            </td>
          </tr>

          <% end %>

          </tbody>
          <tfoot class="full-width">
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th colspan="4">
              <div class="ui right floated small primary labeled icon button" id="new-user">
                <i class="user icon"></i> Add User
              </div>
              <div class="ui small button">
                Approve
              </div>
              <div class="ui small  disabled button">
                Approve All
              </div>
            </th>
          </tr>
          </tfoot>
        </table>
    </div>

    <div class="ui segment center aligned grid">
      <h4>All Works</h4>
    </div>

    <div class="ui segment center aligned grid">
      <table class="ui celled table">
        <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>image</th>
          <th>Url demo</th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @works.each do |work| %>
        <tr>
          <td>
            <%= work.title %>
            <!--<div class="ui ribbon label">First</div>-->
          </td>
          <td><%= work.description %></td>
          <td><%= work.image %></td>
          <td><%= work.url %></td>
          <td>Edit</td>
          <td>
            <a class="btn btn-sm" href="delete/work/<%=work.id%>" data-method="delete">
              <i class="pg-trash"></i><span class="bold">Delete</span>
            </a>
          </td>
        </tr>

        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="4">
            <div class="ui right floated small primary labeled icon button" id="new-work">
              <i class="database icon"></i> New Work
            </div>

          </th>
        </tr>
        <!--<tr><th colspan="4">-->
          <!--<div class="ui right floated pagination menu">-->
            <!--<a class="icon item">-->
              <!--<i class="left chevron icon"></i>-->
            <!--</a>-->
