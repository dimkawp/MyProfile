              <!--<i class="right chevron icon"></i>-->
            <!--</a>-->
          <!--</div>-->
        <!--</th>-->
        <!--</tr>-->
        </tfoot>
      </table>
    </div>
    <div class="ui segment center aligned grid">
      <h4>All Articles</h4>
    </div>

    <div class="ui segment center aligned grid">
      <table class="ui celled padded table">
        <thead>
        <tr><th class="single line">Login</th>
          <th>Title</th>
          <th>Efficacy</th>
          <th>Consensus</th>
          <th>Description</th>
          <th></th>
          <th></th>
        </tr></thead>
        <tbody>
        <% @articles.each do |article| %>
        <tr>
          <td>
            <h2 class="ui center aligned header">
              <%= article.user.username %>
            </h2>
          </td>
          <td class="single line">
            <%= article.title %>
          </td>
          <td>
            <div class="ui star rating" data-rating="3" data-max-rating="3"></div>
          </td>
          <td class="right aligned">
            80% <br>
            <a href="#">18 studies</a>
          </td>
          <td><%= article.description %></td>
          <td>Edit</td>
          <td>
            <a class="btn btn-sm" href="delete/article/<%=article.id%>" data-method="delete">
              <i class="pg-trash"></i><span class="bold">Delete</span>
            </a>
          </td>

        </tr>
        <% end %>

        </tbody>
        <tfoot>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th colspan="4">
            <div class="ui right floated small primary labeled icon button" id="new-article">
              <i class="database icon"></i> New Post
            </div>

          </th>
        </tr>
